<h1>Log in</h1>

<%= form_for(:session, :html => {class: "form", role: "forms"}, url: login_path) do |user| %>
<div class="container">
	<div class="well well-lg" id="login-form-control">
		<div class="input-group" id="form-input-control">
			<%= user.label :username  %>
			<%= user.text_field :username, class: "form-control", placeholder: "Enter your username" %>
		</div>
		<div class="input-group"  id="form-input-control">
				<%= user.label :password %>
				<%= user.password_field :password, class: "form-control", placeholder: "Enter your password" %>
		</div>
		<div class="col-xs-offset-3">
			<div class="input-group-button">
				<%= user.submit "Log in" , class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
	</div>
</div>
<% end %>