<h1 align="center">Welcome to <%= @user.username %>'s profile</h1>
<div class="row">
	<div class="col-md-4 col-md-offset-5 center">
		<%= gravatar_for @user, size: 150 %>
	</div>

	<div class="col-md-12 col-md-offset-11">
		<div class="header-container">
			<h4 id="header-logo">Profile actions</h4>
			<div class="button-container">
				<ul id="profile-action">
					<li><%= link_to "Add as a friend", "#" %></li>
					<% if logged_in? && @user == current_user %>
						<li><%= link_to "Edit profile", edit_user_path %></li>
						<li><%= link_to "Delete profile", user_path, method: :delete %></li>
					<% end %>
				</ul>
			</div>
	</div>
</div>
</div>